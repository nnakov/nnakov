#include <stdio.h>

int main() {
    
    int n,row=0,a=65,row2=1,flag=0;
    
    printf("Input number of rows(alphabet is up to 25 char): ");
    scanf("%d", &n);
    printf("\n");
  
    row = n*2;
    
    for(int i=0; i<n; i++) {
        
        for(int s=0; s<row; s++) {
            printf(" ");
        }
        
        for(int num=0; num<row2; num++) {
            if(num<flag) {
                printf("%2c",a);
                a++;
            } else {
                printf("%2c",a);
                a--;
            }
        }
        row = row - 2;
        row2 = row2 + 2;
        flag++;
        a = 65;
        printf("\n");
    }
    return 0;
}
