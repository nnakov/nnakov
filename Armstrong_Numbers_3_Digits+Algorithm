#include <stdio.h>


int main() {
    
    int n,n1,t=1,r=0,sum=0,c=1,test=1,flag=0;
    
    printf("Input a number: ");
    scanf("%d", &n);
    
    while(test>0) {
        
        t = t*10;
        flag++;
        test = n/t;
    }
    n1 = n;
    t = t/10;
    
    if(n==1) {
       printf("%d is Amstrong number", n);
      return 0;
    }
    
    for(int i=1; i<=flag;i++) {
        
        r = n1/t;
     

        printf("r = %d\n", r);
        c = r*r*r;
        sum = sum + c;
        n1 = n1 - (r*t);
        t = t/10;
    }
    
   if(sum==n) {
   printf("%d is Armstrong number", n);
    }
    
    printf("sum = %d", sum);
    
    return 0;
}
