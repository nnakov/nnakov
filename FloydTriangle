#include <stdio.h>

int main()
{
    
    int n,flag=0;
    
    printf("Enter number of rows: ");
    scanf("%d", &n);
    
    for(int i=1; i<=n; i++) {
        
        if(i%2 == 0) {
            printf("0");
            flag=0;
        } else {
            printf("1");
            flag=1;
        }
      
        for(int x=2; x<=i-1; x++) {
            if(flag==1) {
                printf("0");
                flag=0;
            } else {
                printf("1");
                flag=1;
            }
        }
        if(i>1) {
        printf("1");
        }
    
        printf("\n");
        
    }

    return 0;
}
